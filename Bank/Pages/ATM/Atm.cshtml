@page
@model Bank.Pages.ATM.AtmModel
@{

}


<h1>ATM - Welcome</h1>
<p>Please choose your Action and Amount For Deposit or Withdraw</p>
​
<h3>@ViewData["sentence"]</h3>
<form class="form-group" method="post">
    <div class="form-group">
        <label for="Surname" class="col-sm-2 control-label">Action: Withdraw Or Deposit</label>
        <div class="col-sm-10">
            <select data-val="true" data-val-required="The DayOfWeek field is required." name="bankAction" id="bankAction" >
                <option selected="selected" value="">Pick one</option>
                <option value="Deposit">Deposit</option>
                <option value="Withdraw">Withdraw</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Amount" class="col-sm-2 control-label">amount</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" name="atmAmount" id="atmAmount">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-outline-dark">Enter</button>
        </div>
    </div>
</form>